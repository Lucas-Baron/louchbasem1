{% extends 'layout.njk' %}

{% block head %}
<title>Portif√≥lio - Lucas Baron</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

<div id="wrapper">
    <h1>Projetos</h1>
</div>

<section class="cards">

    {% for iten in itens %}
        <div class="card" id={{iten.id}}>
            <div class="card__img-container {{'featured-wrapper' if iten.featured}}">
                <img src="http://i3.ytimg.com/vi/{{iten.id}}/maxresdefault.jpg" alt="Imagem de {{iten.title}}">
                {% if iten.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>

            <div class="card__contant">
                <h3>{{iten.title}}</h3>
            </div>

            <div class="card__info">
                <h3>{{iten.duration}}</h3>
                <h3 class="card__price">{{iten.price}}</h3>
            </div>
        </div>
    {% endfor %}
   
</section>


<script src="/script.js"></script>

{% endblock %}