{% extends 'layout.njk' %}

{% block head %}
<title>Sobre - {{about.name}}</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

<div id="wrapper">
    <img src="{{about.avatar}}" alt="Imagem de {{about.name}}">
    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>
    <p>{{about.description}}</p>
</div>

<footer>
    <div class="links">
        {% for link in about.links %}
            <a href="{{link.url}}" target="_blanck">{{link.name}}</a>
        {% endfor %}
    </div>
</footer>    
    
{% endblock %}